---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/FAQ.astro";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/pompe_chaleur.webp";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import sopacLogo from "@images/logo_couleur-nobg.webp";
import daikinLogo from "@images/daikin-nobg.webp";
import atlanticLogo from "@images/atlantic-nobg.webp";
import qualityImage from "@images/quality-image.webp";
import professionalImage from "@images/professional-image.webp";
import homeImage from "@images/home-image.webp";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title={`Equipez votre Logement avec <span class="text-custom-red dark:text-custom-red">Sopac</span>`}
    subTitle="Des solutions de chauffage et climatisation de haute qualité pour un confort optimal."
    primaryBtn="Demander un devis"
    primaryBtnURL="/products"
    secondaryBtn="Nous contacter"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating={`<span class="font-bold">4.9</span> / 5`}
    starCount={4}
    reviews={`Découvrez ce que <span class="font-bold">10</span> de nos clients ont dit de nous, et laissez votre avis, il est important, parce que vous satisfaire est notre priorité !`}
    src={sopacLogo}
    alt="Logo de Sopac"
  />

  <ClientsSection
    title="Nos partenaires"
    subTitle="Ils nous font confiance, et vous?"
    src1={atlanticLogo}
    alt1="Logo d'Atlantic"
    src2={daikinLogo}
    alt2="Logo de Daikin"
  />

  <FeaturesGeneral
    title="Pompe à chaleur et climatisation de qualité supérieure"
    subTitle={`Chez So'Pac, nous relevons les défis uniques rencontrés dans le secteur des pompes à chaleur et de la climatisation de qualité supérieure. Fondée en <span style="color: red; font-size: larger;">2023</span> et en pleine croissance, notre activité se concentre sur la région de <span style="color: red; font-size: larger;">Rouen</span>.<br>De l'outillage de pointe aux services d'experts, nous sommes dédiés à vous aider à surmonter les obstacles et à atteindre vos objectifs. La confiance de nos clients, l'importance de l'humain, et notre sérieux sont au cœur de notre mission.`}
    src={featureImage}
    alt="So'Pac - Pompe à chaleur et climatisation de qualité supérieure"
    features={features}
  />

  <FeaturesNavs
    title={`Découvrez les atouts de <span class="text-custom-red dark:text-custom-red">So'Pac</span> pour vos besoins en chauffage et climatisation.`}
    tabs={[
      {
        heading: "Qualité des matériaux et de la main d'œuvre",
        content:
          "Chez So'Pac, nous utilisons des matériaux de haute qualité et une main d'œuvre experte pour garantir des solutions de chauffage et de climatisation fiables et durables.",
        svg: "tools",
        src: qualityImage,
        alt: "Matériaux de haute qualité utilisés par So'Pac",
        first: true,
      },
      {
        heading: "Services pour professionnels",
        content:
          "So'Pac offre des solutions personnalisées de chauffage et de climatisation pour les entreprises, avec un service sur mesure pour répondre aux besoins spécifiques des professionnels.",
        svg: "dashboard",
        src: professionalImage,
        alt: "Services de chauffage et climatisation pour professionnels",
        second: true,
      },
      {
        heading: "Services pour particuliers",
        content:
          "Nous nous occupons également des particuliers en leur proposant des solutions adaptées pour un confort optimal à domicile, avec un service client dédié et attentif.",
        svg: "house",
        src: homeImage,
        alt: "Services de chauffage et climatisation pour particuliers",
      },
    ]}
  />

  <TestimonialsSection
  title="Ce que disent nos clients"
  subTitle="Nous nous engageons à fournir des solutions de chauffage et de climatisation de la plus haute qualité. Découvrez les témoignages de nos clients satisfaits."
  testimonials={[
    {
      content:
        "Grâce à So'Pac, notre maison est maintenant parfaitement climatisée. Le service a été exceptionnel du début à la fin. Je recommande vivement leurs services !",
      author: "Marie Dubois",
      role: "Client résidentiel",
      avatarSrc:
        "https://images.unsplash.com/photo-1554151228-14d9def656e4?crop=faces&fit=crop&fm=jpg&h=320&w=320&q=80",
    },
    {
      content:
        "En tant qu'entreprise, nous avons trouvé en So'Pac un partenaire fiable pour tous nos besoins en chauffage et climatisation. Leur équipe est professionnelle et réactive.",
      author: "Jean-Marc Lefevre",
      role: "Directeur Général | Entreprise X",
      avatarSrc:
        "https://images.unsplash.com/photo-1527980965255-d3b416303d12?crop=faces&fit=crop&fm=jpg&h=320&w=320&q=80",
    },
    {
      content:
        "So'Pac nous a aidés à installer une pompe à chaleur dans notre maison. Le service était impeccable, et nous sommes très satisfaits de la performance du système.",
      author: "Laura Martin",
      role: "Client résidentiel",
      avatarSrc:
        "https://images.unsplash.com/photo-1494790108377-be9c29b29330?crop=faces&fit=crop&fm=jpg&h=320&w=320&q=80",
    },
  ]}
  statistics={[
    {
      count: "50+",
      description: "installations réussies dans la région de Rouen",
    },
    {
      count: "98%",
      description: "de clients satisfaits de nos services",
    },
    {
      count: "5 ans",
      description: "de garantie sur toutes nos installations",
    },
    {
      count: "10 ans",
      description: "d'expérience dans le domaine du chauffage et de la climatisation",
    },
  ]}
/>


  <!-- <PricingSection pricing={pricing} /> -->

  <FAQ title="Questions<br />fréquentes" faqs={faqs} />

  <HeroSectionAlt
    title="Améliorez le confort de votre logement avec So'Pac"
    subTitle="So'Pac vous propose des solutions de chauffage et de climatisation de qualité supérieure pour une maison plus confortable et éco-énergétique. Découvrez nos services et produits dès maintenant."
    url="/contact"
  />
</MainLayout>





